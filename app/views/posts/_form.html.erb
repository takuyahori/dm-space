<%= form_with model: @post, local: true do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id: "posts_title" %>
  </div>

  <div class="field">
    <%= f.label :date, "投稿日" %><br />
    <%= f.date_select :date, id: "posts_date" %>
  </div>

  <div class="field">
    <%= f.label :explanation, "説明文" %><br />
    <%= f.text_area :explanation, class: :form_text, id: "posts_explanation" %>
  </div>

  <div class="field">
    <%= f.label :images, "食事写真" %><br />
    <%= f.file_field :images, multiple: true, id:"posts_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form_btn %>
  </div>
<% end %>